<h1>Edit Owner Details</h1>

<form action="/owners/<%= @owner.id %>" method="post">
  <label>
  First Name:
  <input 
    type="text"
    name="first_name"
   value="<%= @owner.first_name %>"
  >
  </label>

  <label>
  Last Name:
  <input 
    type="text" 
    name="last_name" 
    value="<%= @owner.last_name%>"
  >
  </label>

  <label>
  Address 1:
  <input 
    type="text" 
    name="address_1"
    value="<%= @owner.address_1 %>"
  >
  </label>

  <label>
  Address 2:
  <input 
    type="text" 
    name="address_2"
    value="<%= @owner.address_2 %>"
  >
  </label>

  <label>
  Address 3:
  <input 
    type="text" 
    name="address_3"
    value="<%= @owner.address_3 %>"
  >
  </label>
 

  <input type="submit" value="Update Details"> 

</form>