<h1 class="page_title">Filter Animals on Availability</h1>


<form class="form" action="/animals/filter" method="post">

  <label>
    Select a status:
    <select name="status">
      <option value="Unassessed">Unassessed</option>
      <option value="In Training">In Training</option>
      <option value="Under Vet Care">Under Vet Care</option>
      <option value="Ready for Adoption">Ready for Adoption</option>
      <option value="Adopted">Adopted</option>
    </select>
  </label>

  <input type="submit" value="Submit">

</form>


<p class="animal_detail">Animals filtered:</p>

<% if @animals == nil %>
<p class="status">No status selected</p>
<% else %>
<% for animal in @animals %>
<div class="animal"> 
  <img src="<%= animal.photo %>" alt="animal pic">
  <p>Name: <%= animal.name %></p>
  <p>Admission date: <%= animal.date_format %></p>
  <p><%= animal.status %></p>

  <p><a href="/animals/<%= animal.id %>">Show animal details</a></p> 

</div>
<% end %>
<% end %>
